---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Slider" className="mt-3">
   <div class="jsc-slider-container slider-1">
      <div class="jsc-slider-wrapper">
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1548197253-652ffe79752c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1075&q=80"
               alt="slide image"
            />
         </div>
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1523712999610-f77fbcfc3843?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
               alt="slide image"
            />
         </div>
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1548263594-a71ea65a8598?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80"
               alt="slide image"
            />
         </div>
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1548222606-6c4f581fd09d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1497&q=80"
               alt="slide image"
            />
         </div>
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1451188502541-13943edb6acb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1528&q=80"
               alt="slide image"
            />
         </div>
         <div class="slide">
            <img
               src="https://images.unsplash.com/photo-1506102383123-c8ef1e872756?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
               alt="slide image"
            />
         </div>
      </div>
      <button class="jsc-slide-btn prev">Previous</button>
      <button class="jsc-slide-btn next">Next</button>
   </div>
   <script>
      import JscSlider from "@js-components/slider";

      const slider = new JscSlider({
         container: ".slider-1",
         slidesPerView: 1,
         gap: 5,
         prevEl: ".prev",
         nextEl: ".next",
         breakPoints: {
            480: {
               slidesPerView: 2,
               gap: 10,
            },
            768: {
               slidesPerView: 3,
               gap: 15,
            },
         },
      });
   </script>
   <style>
      .jsc-slider-container .slide img{
        width: 100%;
        height: 550px;
        object-fit: cover;
      }
   </style>
</Layout>
